
<h1>Recipes for <%= @keyword %></h1>

<table border="1">
  <tr>
    <th colspan="2">Title</th>
    <th>Ingredients</th>
  </tr>
  <% @recipes.each do |rec| %>
    <tr class='<% cycle("even", "odd") %>'>
      <td><%= link_to (image_tag rec["thumbnail"]), rec["href"] %></td>
      <td><%= link_to rec["title"], rec["href"] %></td>
      <td><%= rec["ingredients"] %></td>
    </tr>
  <% end %>
</table> 

<p>Time now is <%= Time.now %></p>
